# EditorConfig is awesome: http://EditorConfig.org
# This sets up various editors (github and IntelliJ too) for ensuring that format of files is consistent

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
max_line_length = 120

# Set default charset
charset = utf-8

# 2 space indentation using spaces not tabs and trim whitespace at end of lines
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
